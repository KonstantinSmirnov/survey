<div class="container">
  <div class="row">
    <div class="col-md-8 col-lg-9">
      <div class="jumbotron color-selected shadow">
        <h1 class="display-5"><%= t('survey.share.title') %></h1>
        <p class="lead"><%= t('survey.share.paragraph') %></p>
        <form>
          <div class="input-group">
            <input type="text" class="form-control" value='<%= "#{request.base_url }/surveys/#{@survey.encrypted_link}"  %>'>
            <span class="input-group-btn">
              <%= link_to survey_path(@survey.encrypted_link), target: "_blank", class: 'btn btn-secondary' do %>
                <i class="fa fa-share-square-o" title="Share survey with people"></i>
              <% end %>
            </span>
          </div>
        </form>
        <div class="row">
          <div class="col-xs-12">
            <%= render partial: 'share_buttons', locals: { object: @survey } %>
          </div>
        </div>
      </div>

      <div class="col-sm-4">
        <div class="card shadow">
          <div class="card-block">
            <h4 class="card-title">Email invitation</h4>
            <p class="card-text">Пригласить респондентов вашего опроса и отслеживать их идентичность. Узнайте, как они ответили.</p>
            <div class="text-xs-center">
              <a href="#" class="btn btn-primary">Send</a>
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="card shadow">
          <div class="card-block">
            <h4 class="card-title">Website tools</h4>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Web link</li>
              <li class="list-group-item">Widget on webpage</li>
              <li class="list-group-item">Popup window</li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="card shadow">
          <div class="card-block">
            <h4 class="card-title">Card title</h4>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4 col-lg-3">
      <%= render partial: 'shared/survey_right_menu' %>
    </div>
  </div>
</div>
