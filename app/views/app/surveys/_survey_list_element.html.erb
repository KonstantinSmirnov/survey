<td><%= link_to truncate(survey.title, length: 50), edit_app_survey_path(survey) %></td>
<td><%= survey.respondents.count %></td>
<td>
  <%= link_to app_survey_path(survey) do %>
    <i class="fa fa-share-square-o" title="Share survey with people"></i>
  <% end %>
</td>
<td>
  <%= link_to app_show_survey_results_path(survey) do %>
    <i class="fa fa-tachometer" title="See and analyze results"></i>
  <% end %>
</td>
<td>
  <%= link_to app_survey_activate_path(survey), remote: true do %>
    <%= survey.active? ? 'active' : 'inactive' %>
  <% end %>
</td>
<td>
  <%= link_to 'Delete', app_survey_path(survey), method: :delete, data: { confirm: "Are you sure?" } %>
</td>
