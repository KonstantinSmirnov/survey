<div class="container">
  <div class="row">
    <div class="col-xs-12 text-xs-center main-title">
      <h1>
        <span class="text-xs-center">
          <%= link_to 'Create new survey', new_survey_path, class: 'btn btn-outline-primary' %>
        </span>
      </h1>
      <span>
        <%= link_to "List view", get_list_view_path, class: "#{'active' if current_user.surveys_list_view?}" %>
        |
        <%= link_to "Card view", get_card_view_path, class: "#{'active' if current_user.surveys_card_view?}" %>
      </span>
    </div>
    <div class="col-xs-12">

      <% if current_user.surveys_list_view? %>
      <!-- TABLE VIEW -->
      <table class="table table-hover">
        <thead class="thead-default">
          <tr>
            <th>Title</th>
            <th>Responses</th>
            <th>Share</th>
            <th>Analyze</th>
            <th>Activate</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @surveys.each do |survey| %>
            <tr id="survey-<%= survey.id %>">
              <%= render partial: 'survey_list_element', locals: { survey: survey } %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <!-- END TABLE VIEW -->
      <% end %>

      <% if current_user.surveys_card_view? %>
      <!-- SURVEYS CARD VIEW -->
        <% @surveys.each do |survey| %>
          <div class="col-xs-12 col-sm-6 col-md-3" id="survey-<%= survey.id %>">
            <%= render partial: 'survey_card_element', locals: { survey: survey } %>
          </div>
        <% end %>
      <% end %>

    </div>
  </div>
</div>
