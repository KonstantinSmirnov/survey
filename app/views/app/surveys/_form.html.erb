<%= form_for @survey do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, autocomplete: 'off', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, autocomplete: 'off', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>

<% if @survey.persisted? %>
  <div id="questions">
    <%= render partial: 'app/questions/questions' %>
  </div>
  <div id="add-question">
    <button type="button" class="btn btn-outline-primary col-xs-12" data-toggle="modal" data-target="#new-question-modal">
      Add question
    </button>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="new-question-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title" id="myModalLabel">Select question type</h4>
        </div>
        <div class="modal-body">
          <%= link_to "Single", survey_questions_path(@survey, question_type: 'single'), method: :post, remote: true, class: 'btn btn-outline-primary', "data-dismiss" => "modal" %>
          <%= link_to "Multiply", survey_questions_path(@survey, question_type: 'multiply'), method: :post, remote: true, class: 'btn btn-outline-primary', "data-dismiss" => "modal" %>
          <%= link_to "Text", survey_questions_path(@survey, question_type: 'text'), method: :post, remote: true, class: 'btn btn-outline-primary', "data-dismiss" => "modal" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
