<% case f.object.question.question_type %>
<% when "single" %>
<div class="input-group">
  <span class="input-group-addon">
    <input type="radio">
  </span>
  <%= f.text_field :title, class: 'form-control', autocomplete: 'off', placeholder: t('survey.write_here_answer_variant_text') %>
  <%= f.hidden_field :_destroy %>
  <span class="delete_answer_variant input-group-addon">
    <i class="fa fa-close"></i>
  </span>
</div>
<% when "multiply" %>
<div class="input-group">
  <span class="input-group-addon">
    <input type="checkbox">
  </span>
  <%= f.text_field :title, class: 'form-control', autocomplete: 'off', placeholder: t('survey.write_here_answer_variant_text') %>
  <%= f.hidden_field :_destroy %>
  <span class="delete_answer_variant input-group-addon">
    <i class="fa fa-close"></i>
  </span>
</div>
<% when "text" %>
  <div class="form-group">
    <label><%= t('survey.answer') %></label>
    <%= f.text_area :title, class: 'form-control', rows: 3, autocomplete: 'off', placeholder: t('survey.write_here_placeholder_text') %>
  </div>
<% when "scale" %>
  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1">Scale</span>
    <%= f.text_field :title, class: 'form-control', autocomplete: 'off', placeholder: t('survey.write_here_answer_variant_text') %>
    <%= f.hidden_field :_destroy %>
    <span class="delete_answer_variant input-group-addon">
      <i class="fa fa-close"></i>
    </span>
  </div>
<% when "images_single" %>
    <div class="col-sm-4">
      <div class="card">
        <%= f.file_field :image %>
        <%= image_tag f.object.image.url(:medium), class: "img-fluid" %>
        <div class="card-block text-xs-center">
          <%= f.hidden_field :_destroy %>
          <span class="delete_answer_image_variant">
            <i class="fa fa-close"></i>
          </span>
        </div>
      </div>
    </div>


<% end %>
