<% case question.question_type %>
<% when "single" %>
  <div class="question-form" id="question-<%= question.id %>">
    <%= link_to survey_question_path(question.survey, question), method: :delete, data: { confirm: 'Are you sure?' }, remote: true do %>
      <i class="fa fa-trash question-form-delete"></i>
    <% end %>
    <%= form_for [question.survey, question] do |f| %>
      <div class="form-group">
        <%= f.text_field :title, class: 'form-control' %>
      </div>
    <% end %>
    <div id="question-<%= question.id %>-answers">
      <%= render partial: 'app/answers/answers', locals: {question: question} %>
    </div>
    <%= link_to "Add answer", survey_question_answers_path(question.survey, question), method: :post, remote: true %>
  </div>
<% when "multiply" %>
  <div class="question-form" id="question-<%= question.id %>">
    <%= link_to survey_question_path(question.survey, question), method: :delete, remote: true do %>
      <i class="fa fa-trash question-form-delete"></i>
    <% end %>
    <p>
      <%= question.title %>
    </p>
  </div>
<% when "text" %>
  <div class="question-form" id="question-<%= question.id %>">
    <%= link_to survey_question_path(question.survey, question), method: :delete, remote: true do %>
      <i class="fa fa-trash question-form-delete"></i>
    <% end %>
    <p>
      <%= question.title %>
    </p>
  </div>
<% end %>
