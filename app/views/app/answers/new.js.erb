<%
  @question = Question.find(params[:question_id])
  new_answer = @question.answers.build(title: 'This is an answer')
  form_for [@question.survey, @question] do |f|
    f.fields_for(:answers, new_answer, :child_index => Time.now.to_i) do |builder|
      @answer = builder
    end
  end
%>

$("#question-<%= @question.id %>-answers").append("<%= escape_javascript(render partial: 'answer_fields', locals: { f: @answer }) %>");
